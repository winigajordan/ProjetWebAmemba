{% extends 'base.admin.html.twig' %}
{% block page_title %} Gestion de la newsletter{% endblock page_title %}
{% block content %}
<!-- SECOND SECTION START -->
    <section class="second">
        <div class="container py-5">
            <form method="POST" enctype="multipart/form-data" action="{{path('app_newletter_add')}}">
                <div class="form-group mt-3">
                    <label for="article">Contenu de la letter</label>
                    <textarea rows="10" minlength="20" class="form-control" name="contenu" ></textarea>
                </div>

    		    <div class="form-group">
    		        <button type="submit" class="btn btn-primary">
    		            Poster
    		        </button>
    		    </div>
    		</form>
        </div>

            <div class="card">
            <div class="card-header">
                Newsletters
            </div>
            <div class="card-body">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for letter in letters %}
                        <tr>
                            <td>{{letter.createdAt|format_datetime(locale='fr', dateFormat = 'medium' ,  timeFormat = 'none')}}</td>
                            <td>
                                <a class="btn-btn-outline-primary btn-sm" href="{{path('app_newsletter_details',{id:letter.id})}}">Aper√ßu</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- SECOND SECTION END -->
    

{% endblock content %}
