{% extends 'base.pages.html.twig' %}
{% block page %}{% endblock page %}
{% block content %}
<!-- SECOND SECTION START -->
<section class="second p-3">
    <div class="shop-container">
        <div class="row">
            <aside class="col-lg-3">
                <button class="btn btn-outline-secondary mb-3 w-100  d-lg-none" data-bs-toggle="collapse" data-bs-target="#aside_filter">Show filter</button>
                <div id="aside_filter" class="collapse card d-lg-block mb-5">
                <article class="filter-group">
                    <header class="card-header">
                    <a href="#" class="title" data-bs-toggle="collapse" data-bs-target="#collapse_aside1">
                        <i class="icon-control fa fa-chevron-down"></i>   Categories 
                    </a>
                    </header>
                    <div class="collapse show" id="collapse_aside1">
                        <div class="card-body">
                            <ul class="list-menu">
                                {% for cat in categories %}
                                <li><a href="{{path('app_produit_by_category',{id:cat.id})}}">{{cat.libelle}}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </article> 
                <article class="filter-group">
                    <header class="card-header">
                    <a href="#" class="title" data-bs-toggle="collapse" data-bs-target="#collapse_aside2">
                        <i class="icon-control fa fa-chevron-down"></i>  Prix 
                    </a>
                    </header>
                    <div class="collapse show" id="collapse_aside2">
                        <div class="card-body">
                            <div class="row mb-3">
                            <form method="POST" >
                                <div class="col-6">
                                    <label for="min" class="form-label">Min</label>
                                    <input name="min" class="form-control" id="min" placeholder="0 F CFA" type="number">
                                </div>
                                <div class="col-6">
                                    <label for="max" class="form-label">Max</label>
                                    <input name="max" class="form-control" id="max" placeholder="999999 F CFA" type="number">
                                </div>
                            </div>
                            <button class="btn btn-primary w-100" type="submit">Filtrer</button>
                            </form>
                        </div>
                    </div>
                </article>
                </div>
            </aside>
            <main class="col-lg-9">
                
            <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
                <strong class="d-block py-2">{{count}} produits trouvés </strong>
                <div class="ms-auto">
                  <select class="form-select d-inline-block w-auto">
                      <option value="0">Correspondance</option>
                      <option value="1">Recommandé</option>
                      <option value="2">Hautement noté</option>
                      <option value="3">Au hasard</option>
                  </select>
                </div>
            </header>
            {% if produits|length > 0 %}
            <div class="row">
            {% for i in produits %}
                <div class="col-lg-4 col-md-6 col-sm-6">
                  <figure class="card card-product-grid">
                    <div class="img-wrap text-center"> 
                      <img src="/produits/{{i.images[0].path}}"> 
                    </div>
                    <figcaption class="info-wrap border-top">
                      <div class="price-wrap">
                        <strong class="price">{{i.prix}} F CFA</strong>
                      </div>
                      <p class="title mb-2">{{i.libelle}}</p>
                      <a href="{{path('app_produit_detail',{slug:i.slug})}}" class="btn btn-primary">Details</a>
                      <a href="{{path('app_panier_add',{id:i.id})}}" class="btn btn-light btn-icon"><i class="fa fa-cart-plus" aria-hidden="true"></i> </a>
                    </figcaption>
                  </figure>
                </div>
              {% endfor %}
            </div>
            
            <hr>
            <div class="d-flex justify-content-end mt-4">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                  </nav>
            </div>
            {% endif %}
            </main>
        </div>
        
        </div>
</section>
<!-- SECOND SECTION END -->
{% endblock content %}

